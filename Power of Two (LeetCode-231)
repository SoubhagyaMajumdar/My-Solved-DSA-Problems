class Solution {
public:
    bool isPowerOfTwo(int n) {
        bool T = false;
        for(int i=0; i <= 30; i++)
        {
            int value = pow(2,i);

            if(value == n)
            {
                T = true;
                break;
            }
        }
        if(T == true)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
        
};
